<script>

(function (){
    class SMI_Slide{
        swiper = null;
        sectionId = null;
        sectionEl = null;
        constructor(sectionId) {
            this.sectionId = sectionId.replace('smi-','');
            this.sectionEl = document.querySelector(`#${sectionId}`);
            this._handleInitSwiper();
            this._checkCardStyle();
        }
        _checkCardStyle(){
            let main_ele =  this.sectionEl.querySelector('.smi-section-blog-posts-2__main');
            let card_style = main_ele.getAttribute('card-style')
            let enable_spacing_between_items = main_ele.getAttribute('enable-spacing-between-items')
            

            let style = window.getComputedStyle(this.sectionEl);
            let border_radius = style.getPropertyValue("--blog-card-corner-radius");
            console.log('card_style: ', card_style)
            console.log('border_radius: ', border_radius)
            let all_swiper = document.querySelectorAll(`.swiper-slide-${this.sectionId}`)
            let all_standard = document.querySelectorAll(`.blog-media-standard-${this.sectionId}`)
            
            console.log('all_standard: ', all_standard)
            if(card_style == "card" && parseInt(border_radius.replace('px', '').replace('rem', '')) == 0){
                main_ele.classList.add('smi-content-border-radius-0')
            }else{
                main_ele.classList.remove('smi-content-border-radius-0')
            }
            
            if(parseInt(border_radius.replace('px', '').replace('rem', '')) == 0){
                document.getElementById(`radius_0_style_${this.sectionId}`).style.display="block"
                // document.getElementById(`swiper_slide_first_row_${this.sectionId}`).style.display="block"
                if(card_style == "standard"){
                    if(all_standard){
                        console.log('oh ze');
                        all_standard.forEach(item=>{
                            if(item){
                                item.classList.add('border-none')
                            }
                        })
                    }
                }
                

                

                
                
                
                
                    
                

                
                    try {
                        all_swiper.forEach((index, i) =>{

                            const cl_no = index.getAttribute('data-swiper-slide-index-class').split(' ')
                            cl_no.forEach(index2 =>{
                                
                                if(index2 != ""){
                                    document.querySelector(`.swiper-slide-${i + 1}-${this.sectionId}`).classList.add(index2)
                                }
                            })
                        
                        })
                    } catch (error) {
                        console.log('LOI NE: ', error)
                    }
                
                
            }else{
                document.getElementById(`radius_0_style_${this.sectionId}`).style.display="none"
                
                    all_swiper.forEach((index, i) =>{
                        index.classList.remove('smi-item-xs-first-row')
                        index.classList.remove('smi-item-md-first-row')
                        index.classList.remove('smi-item-lg-first-row')
                        index.classList.remove('smi-item-xl-first-row')
                    })
               

                    

                    if(all_standard){
                        console.log('oi troi oi');
                        all_standard.forEach(item=>{
                            if(item){
                                item.classList.remove('border-none')
                            }
                        })
                    }
            }
            
        }
        _swiper(){

            

            if (typeof Swiper === "undefined") return null;
            const self = this;
            const swiperEl = this.sectionEl.querySelector('.smi-swiper');
            const nextEl = this.sectionEl.querySelector('.arrow-slider-right');
            const prevEl = this.sectionEl.querySelector('.arrow-slider-left');
            const paginationEl = this.sectionEl.querySelector('.smi-pagination');
            let swiperParams = {
                init: true,
                slidesPerView: 'auto',
                loop: false,
                spaceBetween: 30,
                watchSlidesProgress: true,
                pagination: {
                    el: paginationEl,
                    clickable: true,
                },
                navigation: {
                    nextEl: nextEl,
                    prevEl: prevEl,
                },
                on:{
                    afterInit(){
                        self._handlePagination();
                    }
                }
            }

            try {
                const swiperOptions = JSON.parse(swiperEl.getAttribute("data-swiper-options"));
                swiperParams = {...swiperParams, ...swiperOptions}

                if(swiperParams.pageDotStyle.includes('text-style')){
                    swiperParams.pagination.type = "fraction";
                    delete swiperParams.pageDotStyle;
                }

            }catch (e) {
                console.log("Attribute data-swiper-options invalid JSON!")
            }

            this.swiper = new Swiper(swiperEl, swiperParams);

        }

        _handlePagination(){
            if (this.sectionEl.querySelector('.swiper-pagination-lock')){
                this.sectionEl.querySelector('.smi-swiper-pagination')?.classList.add('smi-d-none')
            }
        }
        _handleInitSwiper(){
            const wrap = this.sectionEl.querySelector('.smi-swipe-on-mobile');
            if (!wrap) return null;

            const screenResize = (mediaQuery) => {
                if (mediaQuery.matches) {
                    
                    if (this.swiper?.initialized) this.swiper.destroy();
                    this._swiper();
                } else {
                    
                    if (this.swiper?.initialized) this.swiper.destroy();
                }
            }

            const mediaQuery = window.matchMedia("(max-width: 767.98px)")
            screenResize(mediaQuery)
            mediaQuery.addListener(screenResize)
        }
    }

    document.addEventListener('DOMContentLoaded',() => {
        new SMI_Slide('smi-{{ section.id }}')
    })

    if (Shopify?.designMode){
        new SMI_Slide('smi-{{ section.id }}')
        document.addEventListener('smiReloadSection', (e) => {
            console.log('RELOAD THE SECTION')
            new SMI_Slide('smi-{{ section.id }}')
        })
    }

})();
;

